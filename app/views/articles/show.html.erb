
<div class="grids">

  <div class="grid-12">
    <h1 class="serif mfy"><%= @article.headline %></h1>
  </div>

  <div class="grid-8 article">

    <div class="info">
      <span><strong><%= link_to @article.department.name, '/'+@article.department.slug %></strong></span>
      <span>by <%= raw @article.authors_text %></span>
      <span>Issue <%= @article.issue.name %></span>
      <span>Edition <%= @article.issue.edition %></span>
      <span>Volume <%= @article.issue.volume %></span>
    </div>

    <% if !@article.photos.empty? && @article.photos.first.image %>
      <div class="image mfb">
        <%= image_tag @article.photos.first.image.url(:large), class: 'full' %>
        <% if @article.photos.first.caption %>
          <div class="caption pdy">
            <%= @article.photos.first.caption %>
          </div>
        <% end %>
      </div>
    <% end %>

    <article class="print">
      <!-- TODO: big photo (if indicated) with attribution/source -->
      <!-- TODO: social buttons -->
      <!-- TODO: topics (maybe sidebar?) -->
      <!-- TODO: more photos -->
      <%= simple_format @article.copy %>
      <!-- TODO: below author, more articles by them -->
    </article>
  </div>

  <div class="grid-4">
    <aside>
      <section class="pf mfb">
        <h4>Other articles in this Issue</h4>
        <p>Issue publish date, edition, volume</p>
      </section>

