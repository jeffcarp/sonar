<!DOCTYPE html>
<html>
<head>
  <title>The Colby Echo</title>
  <%
=begin
echo meta('Content-type', 'text/html; charset=utf-8', 'equiv');

echo link_tag(''.base_url().'public/images/favicon.ico', 'shortcut icon', 'image/ico');

$links = array(
          'public/css/front-min-3-7.css',
          'public/css/front_facing/'.$controller.'.css'
);
foreach($links as $l):
	echo link_tag($l);
endforeach;
=end
%>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div id="top">
      <a href="/" style="background-image:url('<%= image_path('logo-white.png') %>');" alt="The Colby Echo" title="The Colby Echo" id="logo"></a>
      <span id="subtitle">Colby College's student run newspaper since 1877</span>
    </div>

    <div id="nav_wrapper"> <div id="nav">
        <ul id="sections">
          <% sections = {
            'HOME' => '',
            'NEWS' => 'news',
            'OPINION' => 'opinion',
            'A&E' => 'ae',
            'FEATURES' => 'features',
            'SPORTS' => 'sports',
            'VIDEOS' => 'videos',
            'TOPICS' => 'topics',
            'BLOG' => 'blog'
          } %>
          <% sections.each do |key, value| %>
            <li>
              <a href="/<%= value %>"><%= key %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>
  <div id="content" class="<%= params[:controller] %>">
    <%= yield %>
  </div>
  <%= render partial: 'layouts/footer' %>
</body>
</html>
