<div class="grids">

  <div class="grid-12">
    <div class="mhy">
      <h2><%= link_to @department.name, '/'+@department.slug %></h2>
      <div>Published: <%= @issue.publish_date %></div>
    </div>
  </div>

  <% @current_articles.each do |a| %>
    <div class="grid-4">
      <div class="mob">
        <% if !a.photos.empty? && a.photos.first.image %>
          <a href="/articles/<%= a.id.to_s  %>">
            <%= image_tag a.photos.first.image.url(:medium), class: 'full' %>
          </a>
        <% end %>
        <h3 class="serif mbb"><%= link_to a.headline, a %></h3>
        <div class="info mcb"><%= raw a.authors_text %></div>
        <p><%= a.deck %></p> 
      </div>
    </div>
  <% end %>

</div>
